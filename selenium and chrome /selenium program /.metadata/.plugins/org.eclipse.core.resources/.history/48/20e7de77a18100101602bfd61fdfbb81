package pac1;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.interactions.Actions;
import org.openqa.selenium.support.ui.ExpectedConditions;
import org.openqa.selenium.support.ui.WebDriverWait;

import java.time.Duration;

public class LAB_6 {
    public static void main(String[] args) {
        WebDriver driver = new ChromeDriver();
        driver.manage().window().maximize();
        driver.get("https://tutorialsninja.com/demo/");

        WebDriverWait wait = new WebDriverWait(driver, Duration.ofSeconds(15));

        try {
            // Step 1: Login
            driver.findElement(By.linkText("My Account")).click();
            driver.findElement(By.linkText("Login")).click();
            driver.findElement(By.id("input-email")).sendKeys("srihitha@test.com");
            driver.findElement(By.id("input-password")).sendKeys("12345");
            driver.findElement(By.cssSelector("input[value='Login']")).click();
            System.out.println("✅ Login successful!");

            // Step 2: Hover over Desktops → Click Show All Desktops
            WebElement desktopsMenu = driver.findElement(By.linkText("Desktops"));
            Actions actions = new Actions(driver);
            actions.moveToElement(desktopsMenu).perform();

            WebElement showAllDesktops = wait.until(
                    ExpectedConditions.elementToBeClickable(By.linkText("Show All Desktops"))
            );
            showAllDesktops.click();
            System.out.println("✅ Navigated to Show All Desktops");

            // Step 3: Add Samsung SyncMaster to cart
            WebElement samsungAdd = wait.until(
                    ExpectedConditions.elementToBeClickable(
                            By.xpath("//a[text()='Samsung SyncMaster 941BW']/../..//button[contains(@onclick,'cart')]")
                    )
            );
            samsungAdd.click();
            System.out.println("✅ Samsung SyncMaster added to cart!");

            // Step 4: Open Cart
            WebElement cartButton = wait.until(
                    ExpectedConditions.elementToBeClickable(By.id("cart"))
            );
            cartButton.click();

            // Step 5: Verify Samsung is in cart
            WebElement cartItem = wait.until(
                    ExpectedConditions.visibilityOfElementLocated(By.xpath("//td[@class='text-left']/a[text()='Samsung SyncMaster 941BW']"))
            );
            if (cartItem.isDisplayed()) {
                System.out.println("✅ Samsung is present in the cart!");
            } else {
                System.out.println("❌ Samsung not found in the cart!");
            }

            // Step 6: Logout
            driver.findElement(By.linkText("My Account")).click();
            driver.findElement(By.linkText("Logout")).click();
            System.out.println("✅ Logged out successfully!");

        } catch (Exception e) {
            e.printStackTrace();
        } finally {
            driver.quit();
        }
    }
}

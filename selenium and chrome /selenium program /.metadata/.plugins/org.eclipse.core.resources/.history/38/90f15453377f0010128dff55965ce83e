package pac1;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;

public class LAB_5_Part_4_5 {
    public static void main(String[] args) {
        System.out.println("Test Start...");

        // Set Chrome driver path if not already in system PATH
        // System.setProperty("webdriver.chrome.driver", "/path/to/chromedriver");

        WebDriver driver = new ChromeDriver();

        try {
            driver.manage().window().maximize();
            driver.get("https://tutorialsninja.com/demo/index.php?route=account/register");

            // --- Step 1: Enter Password ---
            WebElement password = driver.findElement(By.id("input-password"));
            password.sendKeys("Test@1234");

            // --- Step 2: Enter Password Confirm ---
            WebElement confirmPassword = driver.findElement(By.id("input-confirm"));
            confirmPassword.sendKeys("Test@1234");

            // --- Step 3: Click on 'Yes' for Newsletter ---
            WebElement newsletterYes = driver.findElement(By.xpath("//input[@name='newsletter' and @value='1']"));
            newsletterYes.click();

            // --- Step 4: Click Privacy Policy checkbox ---
            WebElement privacyPolicy = driver.findElement(By.name("agree"));
            privacyPolicy.click();

            // --- Step 5: Click Continue button ---
            WebElement continueBtn = driver.findElement(By.xpath("//input[@value='Continue']"));
            continueBtn.click();

            // --- Step 6: Verify success message ---
            String expectedMsg = "Your Account Has Been Created!";
            String actualMsg = driver.findElement(By.xpath("//div[@id='content']/h1")).getText();

            if (actualMsg.equals(expectedMsg)) {
                System.out.println("Success Message Verified: " + actualMsg);
            } else {
                System.out.println("Message mismatch! Found: " + actualMsg);
            }

            // --- Step 7: Click Continue ---
            WebElement continueAfterSuccess = driver.findElement(By.xpath("//a[text()='Continue']"));
            continueAfterSuccess.click();

            // --- Step 8: Click 'View your order history' under My Orders ---
            WebElement orderHistory = driver.findElement(By.linkText("View your order history"));
            orderHistory.click();

            System.out.println("Part 4 & 5 Execution Completed Successfully!");

        } catch (Exception e) {
            e.printStackTrace();
        } finally {
            driver.quit();
            System.out.println("Test Completed!");
        }
    }
}

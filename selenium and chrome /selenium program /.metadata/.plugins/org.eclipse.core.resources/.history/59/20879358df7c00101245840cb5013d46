package New;
import org.openqa.selenium.By;


import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;

public class verifyVideoTutorial {
    public static void main(String[] args) {
        // Set ChromeDriver path (update if needed)
        System.setProperty("webdriver.chrome.driver", "/path/to/chromedriver");

        // Initialize WebDriver
        WebDriver driver = new ChromeDriver();

        try {
            // Open the Contact Us page (replace with your actual URL)
            driver.get("https://automationexercise.com/contact_us");
            driver.manage().window().maximize();

            // Click on Video Tutorials
            WebElement videoTutorials = driver.findElement(By.linkText("Video Tutorials"));
            videoTutorials.click();
            System.out.println("Navigated to Video Tutorials page");

            // Verification (by checking page title or URL)
            String currentUrl = driver.getCurrentUrl();
            if (currentUrl.contains("video-tutorials")) {
                System.out.println("✅ Successfully navigated to Video Tutorials page.");
            } else {
                System.out.println("❌ Navigation to Video Tutorials failed.");
            }

        } catch (Exception e) {
            e.printStackTrace();
        } finally {
            // Close browser
            driver.quit();
        }
    }
}
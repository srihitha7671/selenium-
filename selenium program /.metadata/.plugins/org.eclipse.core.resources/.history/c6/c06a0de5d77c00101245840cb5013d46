package New;

package New;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;

public class TC_AUT_006  {
    public static void main(String[] args) {
        System.setProperty("webdriver.chrome.driver", "/opt/homebrew/bin/chromedriver");

        WebDriver driver = new ChromeDriver();
        driver.manage().window().maximize();

        driver.get("https://automationexercise.com/");

        String[] links = {"Home", "Products", "Cart", "Login", "Test Cases", "API Testing", "Contact us"};
        String[] xpaths = {
            "//a[text()=' Home']",
            "//a[text()=' Products']",
            "//a[text()=' Cart']",
            "//a[text()=' Signup / Login']",
            "//a[text()=' Test Cases']",
            "//a[text()=' API Testing']",
            "//a[text()=' Contact us']"
        };

        for (int i = 0; i < links.length; i++) {
            driver.findElement(By.xpath(xpaths[i])).click();
            if (driver.getTitle().length() > 0) {
                System.out.println("✅ Navigation to " + links[i] + " works.");
            } else {
                System.out.println("❌ Navigation to " + links[i] + " failed.");
            }
            driver.navigate().back();
        }

        driver.quit();
    }
}
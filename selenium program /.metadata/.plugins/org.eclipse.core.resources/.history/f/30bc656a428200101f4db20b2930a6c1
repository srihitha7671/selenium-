package pac1;

import org.testng.Assert;
import org.testng.Reporter;
import org.testng.annotations.AfterMethod;
import org.testng.annotations.BeforeMethod;
import org.testng.annotations.Test;
import org.openqa.selenium.By;
import org.openqa.selenium.Dimension;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;
import io.github.bonigarcia.wdm.WebDriverManager;

import java.util.List;

public class Lab4TestNGTest {
    private WebDriver driver;

    @BeforeMethod
    public void setUp() {
        Reporter.log("Launching Chrome browser", true);
        WebDriverManager.chromedriver().setup();
        driver = new ChromeDriver();
    }

    @AfterMethod
    public void tearDown() {
        Reporter.log("Closing browser", true);
        driver.quit();
    }

    @Test
    public void lab4() {
        driver.get("https://tutorialsninja.com/demo/index.php?");
        driver.manage().window().setSize(new Dimension(1512, 945));
        Reporter.log("Opened TutorialsNinja site", true);

        driver.findElement(By.linkText("Desktops")).click();
        driver.findElement(By.linkText("Mac (1)")).click();

        List<WebElement> elements = driver.findElements(By.cssSelector("h2"));
        Assert.assertTrue(elements.size() > 0, "At least one heading should be visible");
        Reporter.log("Verified headings displayed", true);

        WebElement dropdown = driver.findElement(By.id("input-sort"));
        dropdown.findElement(By.xpath("//option[. = 'Name (A - Z)']")).click();
        Reporter.log("Sorted products by Name (A-Z)", true);

        driver.findElement(By.name("search")).sendKeys("Monitors");
        driver.findElement(By.cssSelector(".input-group-btn > .btn")).click();

        WebElement searchBox = driver.findElement(By.id("input-search"));
        searchBox.clear();
        searchBox.sendKeys("pendrive");

        driver.findElement(By.id("description")).click();
        driver.findElement(By.id("button-search")).click();

        Assert.assertTrue(driver.findElement(By.id("input-search")).isDisplayed(),
                "Search results should be displayed");
        Reporter.log("Search completed successfully", true);
    }
}
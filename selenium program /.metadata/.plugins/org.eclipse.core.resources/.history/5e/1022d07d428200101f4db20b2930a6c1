package pac1;

import org.testng.Assert;
import org.testng.Reporter;
import org.testng.annotations.AfterMethod;
import org.testng.annotations.BeforeMethod;
import org.testng.annotations.Test;
import org.openqa.selenium.By;
import org.openqa.selenium.Dimension;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;
import io.github.bonigarcia.wdm.WebDriverManager;

public class Lab3TestNG {
    private WebDriver driver;

    @BeforeMethod
    public void setUp() {
        Reporter.log("Launching Chrome browser", true);
        WebDriverManager.chromedriver().setup();
        driver = new ChromeDriver();
    }

    @AfterMethod
    public void tearDown() {
        Reporter.log("Closing browser", true);
        driver.quit();
    }

    @Test
    public void lab3() {
        driver.get("https://tutorialsninja.com/demo/index.php?");
        driver.manage().window().setSize(new Dimension(1512, 945));
        Reporter.log("Opened TutorialsNinja site", true);

        driver.findElement(By.linkText("Desktops")).click();
        driver.findElement(By.linkText("Mac (1)")).click();
        Reporter.log("Navigated to Mac page", true);

        WebElement dropdown = driver.findElement(By.id("input-sort"));
        dropdown.findElement(By.xpath("//option[. = 'Name (A - Z)']")).click();
        Reporter.log("Sorted by Name (A-Z)", true);

        WebElement product = driver.findElement(By.cssSelector(".button-group > button:nth-child(1)"));
        Assert.assertTrue(product.isDisplayed(), "Add to cart button should be displayed");
        Reporter.log("Verified product is visible", true);

        product.click();
    }
}